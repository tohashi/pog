<!DOCTYPE html>
<html>
<head>
  <meta content="width=device-width, initial-scale=1.0, minimum-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <title>pog</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a href="/" class="navbar-brand aldrich">pog</a>
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse" id="navbar-main">
        <ul class="nav navbar-nav navbar-right">
          <% if @user.guest? %>
            <li><%= link_to 'Login', '/auth/twitter' %></li>
          <% else %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= "@#{@user.name}" %><span class="caret"></span></a>
              <ul class="dropdown-menu" aria-labelledby="themes">
                <li><%= link_to 'Settings', root_path %></li>
                <li class="divider"></li>
                <li><%= link_to 'Logout', logout_path %></li>
              </ul>
            </li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>

  <div class="container">
    <%= yield %>
  </div>

  <footer class="footer text-center">
    <div class="container">
      <ul class="list-inline">
        <li><%= link_to 'About', root_path %></li>
        <li>|</li>
        <li><%= link_to 'Home', root_path %></li>
      </ul>
    </div>
  </footer>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
